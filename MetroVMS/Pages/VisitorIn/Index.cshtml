@page
@{
    ViewData["Title"] = "Visitor List";
}

<div class="card mb-5 mb-xl-10">
    <div class="card-header d-flex justify-content-between align-items-center border-bottom">
        <h3 class="fw-bold m-0 text-primary">Visitor Log</h3>
       
    </div>

    <div class="card-body">

        <!-- 🔍 Filter Section -->
        <form id="filterForm" method="get" class="row mb-4">
            <div class="col-md-3">
                <label class="form-label fw-semibold">Purpose of Visit</label>
                <select name="PurposeId" class="form-select form-select-sm">
                    <option value="">All</option>
                    <option>Business Meeting</option>
                    <option>Maintenance</option>
                    <option>Interview</option>
                    <option>Delivery</option>
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label fw-semibold">Department</label>
                <select name="DepartmentId" class="form-select form-select-sm">
                    <option value="">All</option>
                    <option>HR</option>
                    <option>Finance</option>
                    <option>IT</option>
                    <option>Operations</option>
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label fw-semibold">Person to Visit</label>
                <input name="Person" type="text" class="form-control form-control-sm" placeholder="Enter name" />
            </div>

            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary btn-sm w-50">Search</button>
            </div>
        </form>

        <!-- 🔄 Grid Section (Static Partial) -->
        <div id="visitorGrid">
            @await Html.PartialAsync("_IndexPartial")
        </div>

    </div>
</div>

@section Scripts {
    <script>
        // Optional AJAX reload (placeholder for future dynamic behavior)
        $("#filterForm").on("submit", function (e) {
            e.preventDefault();
            alert("Search clicked.");
        });
    </script>
}


