@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(function () {
            // =========================
            // 🟢 OPEN EDIT POPUP
            // =========================
            $(document).on("click", ".btnOpenEditModal", function (e) {
                e.preventDefault();

                const $btn = $(this);
                $("#editEmployeeName").val($btn.data("employee"));
                $("#editInTime").val($btn.data("intime"));
                $("#editOutTime").val($btn.data("outtime"));
                $("#editCorrectedIn").val($btn.data("cin"));
                $("#editCorrectedOut").val($btn.data("cout"));

                const modal = new bootstrap.Modal(document.getElementById("editMovementModal"));
                modal.show();
            });

            // =========================
            // 💾 SAVE MOVEMENT CHANGES
            // =========================
            $("#btnSaveMovement").click(function () {
                const modalEl = document.getElementById("editMovementModal");
                const modal = bootstrap.Modal.getInstance(modalEl);
                modal.hide();

                Swal.fire({
                    icon: "success",
                    title: "Saved",
                    text: "Movement correction saved successfully.",
                    timer: 1500,
                    showConfirmButton: false
                });
            });

            // =========================
            // 🔵 MARK IN (Instant Action)
            // =========================
            $(document).on("click", ".btnMarkIn", function (e) {
                e.preventDefault();
                const $row = $(this).closest("tr");
                const now = new Date();
                const time = now.toLocaleTimeString([], { hour: "2-digit", minute: "2-digit" });

                $row.find("td").eq(4).text(time); // assumes In Time = 5th column
                $row.find("td").eq(9).html('<span class="badge bg-info text-dark">Marked In</span>');

                Swal.fire({
                    icon: "success",
                    title: "Marked In",
                    text: `Employee marked IN at ${time}`,
                    timer: 1500,
                    showConfirmButton: false
                });
            });

            // =========================
            // 🔴 MARK OUT (Instant Action)
            // =========================
            $(document).on("click", ".btnMarkOut", function (e) {
                e.preventDefault();
                const $row = $(this).closest("tr");
                const now = new Date();
                const time = now.toLocaleTimeString([], { hour: "2-digit", minute: "2-digit" });

                $row.find("td").eq(5).text(time); // assumes Out Time = 6th column
                $row.find("td").eq(9).html('<span class="badge bg-danger text-white">Marked Out</span>');

                Swal.fire({
                    icon: "warning",
                    title: "Marked Out",
                    text: `Employee marked OUT at ${time}`,
                    timer: 1500,
                    showConfirmButton: false
                });
            });
        });
    </script>
}
