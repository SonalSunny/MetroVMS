@page
@model MetroVMS.Pages.ApproveRequest.IndexModel
@{
    ViewData["Title"] = "Appointment Approval Requests";
}


<div class="card mb-5 mb-xl-10">
    <div class="card-header d-flex justify-content-between align-items-center border-bottom">
        <h3 class="fw-bold m-0 text-primary">Appointment Approval Requests</h3>
    </div>

    <div class="card-body">
        <!-- 🔍 Filter Section -->
        <form id="filterForm" method="get" class="row mb-4">
            <div class="col-md-3">
                <label class="form-label fw-semibold">Requested By</label>
                <input type="text" name="RequestedBy" class="form-control form-control-sm" placeholder="Enter requester name" />
            </div>
            <div class="col-md-3">
                <label class="form-label fw-semibold">Date</label>
                <input type="date" name="Date" class="form-control form-control-sm" />
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary btn-sm w-50">Search</button>
            </div>
        </form>

        <!-- 📋 Request List -->
        <div id="approvalList">
            @await Html.PartialAsync("_IndexPartial")
        </div>
    </div>
</div>

<!-- 🟢 Approval Modal -->
<div class="modal fade" id="approvalModal" tabindex="-1" aria-labelledby="approvalModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-bold" id="approvalModalLabel">Review Appointment Request</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Requested By</label>
                    <input type="text" id="reqEmployeeName" class="form-control form-control-sm" readonly />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">Date</label>
                        <input type="date" id="reqDate" class="form-control form-control-sm" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">Time</label>
                        <input type="time" id="reqTime" class="form-control form-control-sm" />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Meeting Person</label>
                    <input type="text" id="reqMeetingPerson" class="form-control form-control-sm" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Remarks (optional)</label>
                    <textarea id="reqRemarks" class="form-control form-control-sm" rows="2" placeholder="Enter remarks if any"></textarea>
                </div>
            </div>
            <div class="modal-footer bg-light d-flex justify-content-between">
                <button type="button" class="btn btn-danger btnAction" data-action="reject">
                    <i class="fas fa-times me-1"></i> Reject
                </button>
                <button type="button" class="btn btn-success btnAction" data-action="approve">
                    <i class="fas fa-check me-1"></i> Approve
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    $(function () {
        // 🔍 Filter form
        $("#filterForm").on("submit", function (e) {
            e.preventDefault();
            alert("Filter applied (sample only)");
        });

        // 🔹 Open modal when clicking "View"
        $(document).on("click", ".btnViewRequest", function (e) {
            e.preventDefault();

            const $btn = $(this);
            $("#reqEmployeeName").val($btn.data("requestedby"));
            $("#reqDate").val($btn.data("date"));
            $("#reqTime").val($btn.data("time"));
            $("#reqMeetingPerson").val($btn.data("meetingperson"));

            const modal = new bootstrap.Modal(document.getElementById("approvalModal"));
            modal.show();
        });

        // ✅ Approve / Reject buttons
        $(document).on("click", ".btnAction", function () {
            const action = $(this).data("action");
            const modalEl = document.getElementById("approvalModal");
            const modal = bootstrap.Modal.getInstance(modalEl);
            modal.hide();

            Swal.fire({
                icon: action === "approve" ? "success" : "error",
                title: action === "approve" ? "Approved" : "Rejected",
                text: `Appointment has been ${action}d successfully.`,
                timer: 1500,
                showConfirmButton: false
            });
        });
    });
</script>
}
