@page
@model MetroVMS.Pages.MyMovements.IndexModel
@{
    ViewData["Title"] = "My Movements";
}


<div class="card mb-5 mb-xl-10">
    <div class="card-header d-flex justify-content-between align-items-center border-bottom">
        <h3 class="fw-bold m-0 text-primary">My Movements</h3>
    </div>

    <div class="card-body">

        <!-- 🔍 Filter Section -->
        <form id="filterForm" method="get" class="row mb-4">
            <div class="col-md-3">
                <label class="form-label fw-semibold">From Date</label>
                <input type="date" name="FromDate" class="form-control form-control-sm" />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-semibold">To Date</label>
                <input type="date" name="ToDate" class="form-control form-control-sm" />
            </div>

            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary btn-sm w-50">
                    <i class="fas fa-search me-1"></i> Search
                </button>
            </div>
        </form>

        <!-- 🕓 Movements Table -->
        <div id="movementsList">
            @await Html.PartialAsync("_IndexPartial")
        </div>

    </div>
</div>

@section Scripts {
<script>
    // Optional AJAX reload for filter
    $("#filterForm").on("submit", function (e) {
        e.preventDefault();
        alert("Filtering movements by date range...");
    });
</script>
}
