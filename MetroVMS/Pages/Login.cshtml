@page
@using MetroVMS.Pages
@model LoginModel
@{
    Layout = "";
    ViewData["Title"] = "Login page";
}
<html lang="en">
<!--begin::Head-->
<head>
    <base href="../../../" />
    <title>Metro</title>
    <meta charset="utf-8" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="article" />
    <link href="~/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/css/style.bundle.css" rel="stylesheet" type="text/css" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <!--end::Global Stylesheets Bundle-->
</head>
<!--end::Head-->
<!--begin::Body-->
<body id="kt_body" class="app-blank">
    <script>
        var defaultThemeMode = "@(User.FindFirst("ThemeMode")?.Value ?? "light")"; var themeMode; if (document.documentElement) {
            if (document.documentElement.hasAttribute("data-bs-theme-mode")) { themeMode = document.documentElement.getAttribute("data-bs-theme-mode"); } else {
                if (localStorage.getItem("data-bs-theme") !== null) { themeMode = localStorage.getItem("data-bs-theme"); }
                else { themeMode = defaultThemeMode; }
            } if (themeMode === "system") { themeMode = window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light"; }
        }
    </script>
    <div class="d-flex flex-column flex-root" id="kt_app_root">
        <div class="d-flex flex-column flex-lg-row flex-column-fluid">
            <div class="d-flex flex-column flex-lg-row-fluid w-lg-50 p-10 order-2 order-lg-1">
                <div class="d-flex flex-center flex-column flex-lg-row-fluid">
                    <div class="w-lg-500px p-10">


                        <form method="post" data-ajax="true" asp-page-handler="Login" data-ajax-method="post" data-ajax-begin="setButtonLoader()"
                              data-ajax-success="completed" data-ajax-error="failed" id="custRegForm" novalidate="novalidate" autocomplete="off">
                            <div class="text-center mb-11">
                                <h1 class="text-dark fw-bolder mb-3">Login</h1>
                                <div class="text-gray-500 fw-semibold fs-6">Welcome Back! Please sign in to access your workspace</div>
                            </div>
                            <div class="fv-row mb-6">
                                <div class="position-relative login-height">
                                    <i class="fas fa-user position-absolute top-50 start-0 translate-middle-y ms-3"></i>
                                    <input type="text" asp-for="inputModel.Username" placeholder="Email / Mobile" autocomplete="off" class="form-control ps-10 bg-transparent" />
                                    <span class="text-danger field-validation-valid position-absolute login-input"
                                          data-valmsg-for="inputModel.Username" data-valmsg-replace="true"></span>

                                </div>

                            </div>
                            <div class="fv-row mb-6">
                                <div class="position-relative login-height">
                                    <i class="fas fa-lock position-absolute top-50 start-0 translate-middle-y ms-3"></i>
                                    <input type="password" asp-for="inputModel.Password" id="txtPassword" placeholder="Password" autocomplete="off" class="form-control ps-10 bg-transparent" />
                                    <span class="text-danger field-validation-valid position-absolute login-input"
                                          data-valmsg-for="inputModel.Password" data-valmsg-replace="true"></span>

                                </div>

                            </div>
                            <div class="d-grid mb-10">
                                <button type="submit" class="btn btn-primary login-margin" id="btnSubmit">
                                    <span class="indicator-label">Continue</span>
                                    <span class="indicator-progress">
                                        Please wait...
                                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                    </span>
                                </button>
                            </div>
                            <input type="hidden" asp-for="inputModel.ForceLogin" id="ForceLogin" />
                        </form>
                    </div>
                </div>
                <div class="text-gray-500 fw-semibold fs-6">Version 1.0 | Developed By Techno Care</div>

            </div>

            <div class="d-flex flex-lg-row-fluid w-lg-50 bgi-size-cover bgi-position-center order-1 order-lg-1 " >
                <div class="d-flex flex-column flex-center py-7 py-lg-15 px-5 px-md-15 w-100">
                    <a href="" class="mb-0 mb-lg-12" style="text-align: center;">
                        <img style="width: 80%;" alt="Logo" src="~/media/logos/met_enlarge.png"  />
                        <!--    class="h-60px h-lg-75px"-->
                    </a>
                </div>
            </div>
        </div>
    </div>
    <script>    var hostUrl = "../";</script>

    <script src="~/plugins/global/plugins.bundle.js"></script>
    <script src="~/js/scripts.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jquery.unobtrusive-ajax.js"></script>
    <script src="~/js/jquery.validate.js"></script>
    @* <script src="~/js/jquery.validate.unobtrusive.js"></script> *@
    <script type="text/javascript">
        $(document).ready(function (e) {
            $.validator.unobtrusive.parse("#custRegForm");
        });

        function setButtonLoader(e) {
            $("#btnSubmit").find('.indicator-progress').toggle();
            $("#btnSubmit").find('.indicator-label').toggle();
        }

        function completed(data) {
            setButtonLoader();
            $("#response").html("");
            if (data.status == "OK") {
                window.top.location.href = '/Index'
            }
            else if (data.status == "Conflict") {
                Swal.fire({
                    icon: 'info',
                   title:'You have multiple active sessions. Continuing will log you out from other sessions. Click Proceed to continue.',

                    buttonsStyling: false,
                    showCancelButton: false,
                    confirmButtonText: "Proceed",
                    customClass: {
                        confirmButton: "btn btn-success",
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        $("#ForceLogin").val(true);
                        $('#btnSubmit').click();
                    }
                })
            }
            else if (typeof data.status != "undefined") {
                $("#txtPassword").val("");
                var strHtml = "<div class='alert alert-danger d-flex align-items-center p-5 mb-10'>";
                strHtml += "<i class='fas fa-times  fs-2hx text-danger me-4'></i>";
                strHtml += "<div class='d-flex flex-column'>";
                strHtml += "<h4 class='mb-1 text-danger'>Login Failed</h4>";
                strHtml += " <span>" + data.returnMessage + "</span>";
                strHtml += " </div>";
                strHtml += " </div>";
                $("#response").html(strHtml);
            }
        }

        failed = function (xhr) {
            $("#response").html("Internal Error Occured");
        };
    </script>
</body>
<!--end::Body-->
</html>

